# 공통 API / URL (React 앱용으로 직접 정의 - Backend도 동일한 변수 사용)
REACT_APP_BACKEND_URL=http://localhost
REACT_APP_BACKEND_PORT=5000
REACT_APP_FRONTEND_URL=http://localhost
REACT_APP_FRONTEND_PORT=3000

# Backend 기본 설정
NODE_ENV=dev
PORT=5000
HOST=0.0.0.0

# Database (backend only)
DB_HOST={{DB_HOST}}
DB_USER={{DB_USER}}
DB_PASS={{DB_PASS}}
DB_NAME={{DB_NAME}}

# JWT (공통)
JWT_SECRET={{JWT_SECRET}}
JWT_EXPIRES_IN=7d

# OAuth 공통 (React 앱용으로 직접 정의 - Backend도 동일한 변수 사용)
REACT_APP_KAKAO_REST_API_KEY={{KAKAO_KEY}}
REACT_APP_NAVER_CLIENT_ID={{NAVER_CLIENT_ID}}
REACT_APP_NAVER_CLIENT_SECRET={{NAVER_CLIENT_SECRET}}

# Redirect (React 앱용으로 직접 정의 - Backend도 동일한 변수 사용)
REACT_APP_KAKAO_REDIRECT_URI={{KAKAO_REDIRECT_URI}}
REACT_APP_NAVER_REDIRECT_URI={{NAVER_REDIRECT_URI}}

# Additional backend settings
ALLOW_TEST_TOKEN_IN_PROD=false
