<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 모든 HTTP 트래픽 허용 (개발/테스트용) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
