NODE_ENV=production

########################################
# 백엔드 환경 변수 예시 (.env 파일)
# 이 파일을 복사해서 같은 경로에 `.env` 이름으로 저장한 뒤
# 실제 값으로 변경해서 사용하세요.
########################################

# 서버 포트
PORT=5000

# JWT 시크릿 키
# - 실제 서비스에서는 충분히 길고 복잡한 랜덤 문자열을 사용하세요.
JWT_SECRET=change_this_to_a_secure_random_string

# Kakao OAuth
# - Kakao Developers에서 발급받은 REST API 키
KAKAO_REST_API_KEY=your_kakao_rest_api_key

# Kakao Redirect URI
# - 카카오 로그인 완료 후 카카오가 리다이렉트해줄 주소입니다.
# - Kakao Developers > 카카오 로그인 리다이렉트 URI에 동일한 값으로 등록해야 합니다.
KAKAO_REDIRECT_URI=http://localhost:5000/api/auth/kakao/callback

# Naver OAuth
# - Naver Developers에서 발급받은 Client ID / Secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Naver Redirect URI
# - 네이버 로그인 완료 후 네이버가 리다이렉트해줄 주소입니다.
# - Naver Developers > Callback URL에 동일한 값으로 등록해야 합니다.
NAVER_REDIRECT_URI=http://localhost:5000/api/auth/naver/callback

# 테스트용 토큰 발급 엔드포인트 사용 여부
# - false (기본값): 프로덕션에서 /api/auth/test-token 비활성화
# - true          : 프로덕션에서도 /api/auth/test-token 사용 허용
ALLOW_TEST_TOKEN_IN_PROD=false

