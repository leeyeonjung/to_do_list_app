# 백엔드 환경 변수 예시
NODE_ENV=production
PORT=5000
HOST=0.0.0.0
BACKEND_URL=http://localhost
BACKEND_PORT=5000
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=7d

# 데이터베이스
DB_HOST=postgres
DB_USER=todo
DB_PASS=todo123
DB_NAME=tododb

ALLOW_TEST_TOKEN_IN_PROD=false

# OAuth 설정
KAKAO_REST_API_KEY=your_kakao_rest_api_key
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# OAuth Redirect URI (카카오 개발자 콘솔에 등록된 URI와 일치해야 함)
KAKAO_REDIRECT_URI=http://localhost:5000/api/auth/kakao/callback
NAVER_REDIRECT_URI=http://localhost:5000/api/auth/naver/callback

# 프론트엔드 URL (OAuth 리다이렉트용)
FRONTEND_URL=http://localhost
FRONTEND_PORT=3000
